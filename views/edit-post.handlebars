<article>
  
  <div class="py-3 my-3">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  </div>

  <h2>
    Edit Post
  </h2>
  <form id="edit-post-form" class="edit-post-form bg-white p-3 mb-3 rounded shadow-sm">
    <div>
      <input class="form-control mb-3" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <input class="form-control mb-3" name="post-content" type="text" value="{{post.content}}" />
    </div>
    <div class="my-3">
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" class="btn btn-primary delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form bg-white p-3 mb-3 rounded shadow-sm">
  <div>
    <textarea name="comment-body" class="form-control mb-3"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>